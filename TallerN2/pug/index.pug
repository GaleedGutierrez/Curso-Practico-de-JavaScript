extend ./components/global/_global.pug
block head
    +style-head("../css/style.css")
    //- +style-head-responsive("../css/tablet.css", "1024")
    //- +style-head-responsive("../css/desktop.css", "1280")
    +titles("Figuras geom√©tricas")
block main
    main.main
        section.main__subtotal-cupon-container
            h2.main__subtotal-cupon-title Calcula el precio final de tu compra
            .boxes-data-container 
                +boxes-data-input("boxes-data-input--white", "boxes-data-input__input--orange", "boxes-data-input-title--black","number", "Subtotal", "subtotal-input", "Precio")
        section.main__cupons-container
            h3.main__cupons-title Selecione o ingrese un cupon
            .boxes-data-container
                +boxes-data-input("boxes-data-input--white", "boxes-data-input__input--orange", "boxes-data-input-title--black","text", "Cupon", "cupon-input", "TO1")
            .cupons__buttons-container
                +buttons-cupons("TO10", "cupon", "1", "")
                +buttons-cupons("TO20", "cupon", "2", "")
                +buttons-cupons("TO30", "cupon", "3", "")
                +buttons-cupons("TO40", "cupon", "4", "")
                +buttons-cupons("TO50", "cupon", "5", "")
                +buttons-cupons("TO60", "cupon", "6", "")
                +buttons-cupons("TO70", "cupon", "7", "")
                +buttons-cupons("TO80", "cupon", "8", "")
        section.main__total-container 
            +figure-img("1bl11AhmUq6Ac64diUfeWUfTZpeqrUD9g", "Shopping cart icon").total-container__shopping-cart-icon
            .boxes-data-container
                +boxes-results-final("Total", "total")